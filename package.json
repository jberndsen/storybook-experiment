{
  "name": "storybook-react-library",
  "author": "Jeroen Berndsen",
  "license": "MIT",
  "homepage": "https://github.com/jberndsen/storybook-experiment",
  "readme": "https://github.com/jberndsen/storybook-experiment/README.md",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && npm run build:ts && npm run build:scss && npm run build:update-scss-imports",
    "build:scss": "node-sass src -o dist",
    "build:ts": "tsc --build tsconfig.json",
    "build:update-scss-imports": "grep -rl '.scss' dist | xargs sed -i '' -e 's/.scss/.css/g'",
    "test": "jest",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.10",
    "@storybook/addon-links": "^5.1.10",
    "@storybook/addons": "^5.1.10",
    "@storybook/react": "^5.1.10",
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "rimraf": "^3.0.0",
    "typescript": "3.5.3"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
